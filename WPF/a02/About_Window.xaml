                    Grid.Row="1" Grid.ColumnSpan="2" 
                    VerticalAlignment="Center" 
                    Margin="30,0,41,0" 
                    HorizontalAlignment="Center">
            This application is assignment 02<LineBreak/> 
            It is simple notepad
        </TextBlock>
        <TextBlock  Name="Contact" 
                    Grid.Row="2" Grid.ColumnSpan="2" 
                    VerticalAlignment="Center" 
                    Margin="20,0,0,0">
            <Bold>Conatct:</Bold> hkwon2054@conestogac.on.ca
        </TextBlock>
        <Button     Content="OK" 
                    Grid.Column="2" Grid.Row="2" 
                    Width="70" Height="20" 
                    Margin="80,0,0,0" 
                    FontWeight="Bold" 
                    Click="BtnOK_Click"/>
    </Grid>
</Window>
